#include "common.h"

struct 	v2p
{
 	half2 	tc0: 		TEXCOORD0;	// base
// 	half2 	tc1: 		TEXCOORD1;	// lmap
  	half4	c0:		COLOR0;		// sun
};

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
half4 	main_ps_2_0	( v2p I )	: COLOR
{
	half4	t_base 	= tex2D	(s_base,I.tc0);

	half3	light	= I.c0.rgb;
	half3	final 	= light*t_base*2;
	half alpha	= t_base.a*I.c0.a;

	// out
	return  half4	(final.r,final.g,final.b,alpha);
}
